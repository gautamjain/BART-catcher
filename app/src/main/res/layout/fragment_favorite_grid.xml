<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bartproject.app.fragment.FavoriteStationsGridFragment"
    android:layout_margin="8dip">

    <!-- TODO: Update blank fragment layout
        Should include a GridView (destinations) and a TextView (title - e.g. Where are you going?)
     -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:textSize="24dp"
        android:textColor="#33B5E5"
        android:text="@string/Favorite_Station_Text"
        android:padding="5dp"/>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:id="@+id/gvFavorites"
        android:layout_gravity="center"
        android:layout_below="@id/tvTitle"/>

</RelativeLayout>
